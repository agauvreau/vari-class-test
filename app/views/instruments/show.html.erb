<div>
    <p><%= @instrument.name %></p>
    <p><%= @instrument.ident %></p>
    <p><%= @instrument.inst_type %></p>
    <p><%= @instrument.model %></p>
    <p><%= @instrument.maker %></p>
    <div class="col-md-6"> <!-- btn group -->
        <div class="btn-group pull-right"> <!-- groups the button to the right for improved aesthetic -->
            <%= link_to "Back", instruments_path, class:"btn btn-primary" %>
            <%= link_to "Edit", edit_instrument_path, class:"btn btn-warning" %>
            <!--The delete button is specific a bit here it sends the DELETE html method to the pin path -->
            <%= link_to "Delete", instrument_path, method: :delete, data: { confirm: "Are you sure" }, class:"btn btn-danger" %>
        </div>
    </div>
</div>

<%= link_to "Cancel", root_path, class:"btn btn-warning" %>